<h2>Show user</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @user.email %>
  </li>

</ul>

<%= if current_user(@conn).id == @user.id do %>
<%= link "Edit", to: user_path(@conn, :edit, @user) %>
<% end %>

<h3>Rounds</h3>
<ul>
  <%= for round <- @user.rounds do %>
    <li><%= link "#{round.course.name} @ #{round.date}", to: round_path(@conn, :show, round) %></li>
  <% end %>
</ul>
